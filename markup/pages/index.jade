        #popUp.popup
            .popup-content
                a(href="#").close
                form(method="post" action="#")
                    label(for="login__name") Почта:
                    input#login__email(type="text" name="login")
                    span#valid
                    label(for="login__password") Пароль:
                    input#login__password(type="password" name="password")
                    span#valid-pass
                    button.btn.btn--submit(type="submit" value="Отправить") Отправить



        include ../components/footer/footer-script